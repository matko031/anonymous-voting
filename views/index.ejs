<%- include('includes/header') %>
    <div class = "container">
        <form action="/vote" method="POST">
        <div class = "form-group">
            <label for="vote"> <b>Your vote for <%= question %></b> </label>
                <select id="vote" name="vote" class="form-control"  >
                <% answers.forEach( (answer) => { %>
                    <option value="<%= answer.answer_id%>"> <%= answer.answer_text%> </option>
                <% }); %>
                <!--
                <option value="blank"> Blank </option>
                -->
                </select>
                <br>
        </div>
        <div class = "form-group">
                <label for="code">Your code</label>
                <input type="text" name="code" class="form-control">
        </div>
        <input type="hidden" name="question_id" value="<%= question_id %>" >
        <div class="form-group">
                <button type="submit" class="btn btn-primary"> Send </button>
        </div>
        </form>
                <a href="/results"><button class="btn btn-info"> Results </button> </a>
