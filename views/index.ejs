<%- include('includes/header') %>
    <div class = "container">
        <form action="/vote" method="POST">
        <div class = "form-group">
            <label for="position"> <b>Your vote for <%= name %></b> </label>
                <select id="vote" name="vote" class="form-control"  >
                <% candidates.forEach( (candidate) => { %>
                    <option value="<%= candidate %>"> <%= candidate %> </option>
                <% }); %>
                <option value="blank"> Blank </option>
                </select>
                <br>
        </div>
        <div class = "form-group">
                <label for="code">Your code</label>
                <input type="text" name="code" class="form-control">
        </div>
        <input type="hidden" name="position" value="<%= name %>" >
        <div class="form-group">
                <button type="submit" class="btn btn-primary"> Send </button>
        </div>
        </form>
                <a href="/results"><button class="btn btn-info"> Results </button> </a>
                <a href="/adminlogin"><button class="btn btn-secondary"> Admin login</button> </a>
                <a href="/dashboard"><button class="btn btn-warning"> Dashboard </button> </a>
    </div>

